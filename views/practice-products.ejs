<!DOCTYPE html>
<html>
<head>
  <title>My Products</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    h1 {
      color: #333;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      background: #f3f3f3;
      margin: 10px 0;
      padding: 10px;
      border-radius: 5px;
    }
    .empty {
      color: #888;
      font-style: italic;
    }
  </style>
</head>
<body>
  <h1>Welcome, <%= user.username %>!</h1>

  <h2>Your Products:</h2>

  <% if (all_products.length === 0) { %>
    <p class="empty">You have no products yet.</p>
  <% } else { %>
    <ul>
      <% all_products.forEach(product => { %>
        <li>
          <strong><%= product.name %></strong><br>
          Price: â‚¹<%= product.price %>
        </li>
      <% }) %>
    </ul>
  <% } %>
</body>
</html>
